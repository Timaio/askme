<h1 class="text-center">Sign up</h1>

<% if @user.errors.any? %>
  <div class="text-red text-small mt-md">
    <% @user.errors.full_messages.each do |message| %>
      <p class="mb-sm">*<%= message %></p>
    <% end %>
  </div>
<% end %>

<div class="mt-lg content-center">
  <%= form_with model: @user, data: {turbo: false} do |form| %>
    <p><%= form.label :name, "Name" %></p>
    <p><%= form.text_field :name, class: "form-text-field mb-md" %></p>

    <p><%= form.label :nickname, "Nickname" %></p>
    <p><%= form.text_field :nickname, class: "form-text-field mb-md", maxlength: 40 %></p>

    <p><%= form.label :email, "Email" %></p>
    <p><%= form.text_field :email, class: "form-text-field mb-md" %></p>

    <p><%= form.label :password, "Password" %></p>
    <p><%= form.password_field :password, class: "form-text-field mb-md" %></p>

    <p><%= form.label :password_confirmation, "Password confirmation" %></p>
    <p><%= form.password_field :password_confirmation, class: "form-text-field mb-md" %></p>

    <p><%= form.button "Sign up", class: "button button-primary" %></p>

  <% end %>
</div>