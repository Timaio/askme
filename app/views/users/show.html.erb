<h1 class="mb-md"><%= @user.name %></h1>
<p class="mb-lg"><%= display_nickname @user.nickname %></p>

<%= render "avatar", user: @user %>

<% if current_user == @user %>
  <p>
    <%= link_to edit_user_path(@user.nickname) do %> 
      <%= fa_icon("pencil") %> Edit profile
    <% end %>
  </p>
<% end %>

<%= render "questions/form", question: @question %>

<h2 class="mb-md"> 
  <%= @questions.count %> <%= incline @questions.count, "question", "questions" %> 
  to <%= display_nickname @user.nickname %>
</h2>

<% if @questions.present? %>
  <%= render @questions %>
<% else %>
  <p>This user has no questions yet. Your question may come first.</p>
<% end %>

<h2 class="mb-md mt-lg"> 
  <%= @questioner_questions.count %> <%= incline @questioner_questions.count, "question", "questions" %> 
  from <%= display_nickname @user.nickname %>
</h2>

<% if @questioner_questions.present? %>
  <%= render @questioner_questions %>
<% else %>
  <p>This user has not asked any questions yet.</p>
<% end %>

