<% if @question.errors.any? %>
  <div class="text-red text-small mt-md">
    <% @question.errors.full_messages.each do |message| %>
      <p class="mb-sm">*<%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: question, data: {turbo: false}, class: "mb-lg" do |form| %>
  <%= form.text_area :body, rows: 2, class: "form-text-area mb-sm", maxlength: 280 %>
  
  <p><%= form.label :user_id, "User ID" %></p>
  <%= form.text_field :user_id, class: "form-text-field mb-sm" %>

  <p class="mb-md">
    <%= form.label :hidden, "Hidden" %>
    <%= form.check_box :hidden %>
  </p>

  <p><%= form.button "Save", class: "button button-primary" %></p>
<% end %>